{% extends 'base.html.twig' %}

{% block title %}
    {{ sortie.nom }}
{% endblock %}
{% block nav%} {% endblock%}

{% block stylesheets %}
    <link href="{{asset('css/creerSortie.css')}}" rel="stylesheet">
{% endblock %}

{% block body %}

    <div class="container-fluid px-1 py-5 mx-auto">
        <div class="row d-flex justify-content-center">
            <div class="col-xl-7 col-lg-8 col-md-9 col-11 text-center">
                <h3> {{ sortie.nom }}</h3>
                <div class="card">
                    <form action="">
                        <div class="row justify-content-between text-left">
                            <div>
                                <label for="dateHeureDebut"> Date de la sortie </label>
                                <input type="date" name="dateHeureDebut" value="{{ sortie.dateHeureDebut.format('Y-m-d') }}" disabled >
                            </div>
                        </div>
                        <div class="row justify-content-between text-left">
                            <div>
                                <label for="dateLimiteInscription"> Date limite d'inscription </label>
                                <input type="date" name="dateLimiteInscription" value="{{ sortie.dateLimiteInscription.format('Y-m-d') }}" disabled >
                            </div>
                        </div>
                        <div class="row justify-content-between text-left">
                            <div>
                                <label for="nbInscriptionsMax"> Nombre de places  </label>
                                <input type="text" name="nbInscriptionsMax" value="{{ sortie.nbInscriptionsMax }}" disabled >
                            </div>
                        </div>
                        <div class="row justify-content-between text-left">
                            <div>
                                <label for="duree"> Dur√©e (en minutes) </label>
                                <input type="number" name="duree" value="{{ sortie.duree }}" disabled >
                            </div>
                        </div>
                        <div class="row justify-content-between text-left">
                            <div>
                                <label for="duree"> Descriptions et informations </label>
                                <input type="number" name="duree" value="{{ sortie.infosSortie }}" disabled >
                            </div>
                        </div>
                        <div class="row justify-content-between text-left">
                            <div>
                                <label for="campus"> Campus </label>
                                <input type="text" name="campus" value="{{ sortie.siteOrganisateur.nom }}" disabled >
                            </div>
                        </div>
                        <div class="row justify-content-between text-left">
                            <div>
                                <label for="lieu"> Lieu </label>
                                <input type="text" name="lieu" value="{{ sortie.lieu.nom }}" disabled >
                            </div>
                        </div>
                        <div class="row justify-content-between text-left">
                            <div>
                                <label for="adresse"> Adresse </label>
                                <input type="text" name="adresse" value="{{ sortie.lieu.rue }}  {{ sortie.lieu.ville.codePostal }} {{ sortie.lieu.ville.nom }}" disabled >
                            </div>
                        </div>
                        <div class="row justify-content-between text-left">
                            <div>
                                <label for="Latitude"> Latitude </label>
                                <input type="text" name="Latitude" value="{{ sortie.lieu.latitude }}" disabled >
                            </div>
                        </div>

                            <div class="row justify-content-between text-left">
                                <div>
                                    <label for="longitude"> Longitude </label>
                                    <input type="text" name="longitude" value="{{ sortie.lieu.longitude }}" disabled >
                                </div>
                            </div>
                            <div class=" text-center">
                                <input type="hidden" name="id" value="{{ sortie.id }}">
                                <a style="list-style: none; text-decoration: none" href="{{ path("app_template") }}">
                                    <input disabled value="Fermer" class="btn-block btn-secondary text-center" style="width: 102px" />
                                </a>
                            </div>
                    </form>
                </div>
            </div>
        </div>
    </div>


{% endblock %}


