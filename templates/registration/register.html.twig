{% extends 'base.html.twig' %}

{% block stylesheets %}
    {% form_theme registrationForm 'bootstrap_4_layout.html.twig' %}
    <link rel="stylesheet" href="{{  asset('css/formUser.css') }}">
{% endblock %}

{% block title %}Ajouter un utilisateur{% endblock %}
{% block nav%} - Enregistrement {% endblock%}

{% block body %}
<div class="wrapper">

    {{ form_start(registrationForm) }}

    <div class="my-custom-class-for-errors">
        {{ form_errors(registrationForm) }}
    </div>

    <div id="wizard" class="card">
        <h3 class="text-center titre">Ajouter un utilisateur</h3>
        <section >
            <div class="form-header">
                <div class="form-group">
                        <div class="form-holder">
                            {{ form_row(registrationForm.pseudo, {'class':'form-control'})}}
                        </div>
                        <div class="form-holder">
                            {{ form_row(registrationForm.nom) }}
                        </div>

                        <div class="form-holder">
                            {{ form_row(registrationForm.tel) }}
                        </div>
                        <div class="form-holder">
                            {{ form_row(registrationForm.roles) }}
                        </div>
                </div>
                <div class="form-group">
                        <div class="form-holder">
                            {{ form_row(registrationForm.prenom , {'attr': {'class': 'form-control'} }) }}
                        </div>
                        <div class="form-holder">
                            {{ form_row(registrationForm.campus) }}
                        </div>
                        <div class="form-holder">
                            {{ form_row(registrationForm.email) }}
                        </div>
                        <div class="form-holder">
                            {{ form_row(registrationForm.actif) }}
                        </div>
                </div>
            </div>
            <div class="form-holder">
                    {{ form_row(registrationForm.password) }}
            </div>
            <div class="text-center">
                <input  id="ajouter" class="btn btn-block valid-btn mb-4" type="submit" value="Ajouter">
                <a href="{{ path("app_accueil") }}"><input  id="fermer" class="btn btn-block mb-4" type="button" value="Fermer"></a>
            </div>
        </section>
    </div>
    {{ form_end(registrationForm) }}
</div>

{% endblock %}

